#!/bin/bash

_dir=storage/music/Telegram
carga (){
    rclone copy --transfers 1 -P $_dir $1
}

_check=$(ls $_dir | wc -l)

_help() {
    echo -e "\nOptions:"
    echo -e "\thelp: show help."
    echo -e "\trc: rock."
    echo -e "\tch: chidas."
    echo -e "\tro: romanticas."
    exit 0
}

if [[ $_check -gt 0 ]]; then
    case $1 in
        rc) _path="Rock" ; carga flac:dir2;;
        ch) _path="Chidas" ; carga dropbox:musica/chidas;;
        ro) _path="Romanticas" ; carga pcloud:musica/romanticas;;
        *) echo "Invalid option!" && _help;;
    esac
    if [[ ! $? -eq 0 ]]; then 
        _message="${_path} is failed!"
        _tags=warning,skull
    fi
else
    echo "Nada que hacer."
    exit 0
fi

curl \
    -H "Title: Rclone ${_path}" \
    -H "Priority: urgent" \
    -d "${_message:-"Music is done!"}" \
    -H "Tags: ${_tags:-"iphone,white_check_mark"}" \
    ntfy.sh/${API_NTFY} > /dev/null 2>&1
