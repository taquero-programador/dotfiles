#!/bin/bash

_dir=/sdcard/Music

if [[ $(ls -A $_dir) ]]; then
    rclone copy -P --transfers 1 $_dir mega:flac
    if [[ ! $? -eq 0 ]]; then
        _message="Mega music is failed!"
        _tags=warning,skull
    fi
else
    echo "Nada que hacer."
    exit 0
fi

curl \
    -H "Title: Rclone music rock" \
    -H "Priority: urgent" \
    -d "${_message:-"Mega music is done!"}" \
    -H "Tags: ${_tags:-"iphone,white_check_mark"}" \
    ntfy.sh/${API_NTFY} &> /dev/null
