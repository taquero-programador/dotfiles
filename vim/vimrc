let g:vimtex_compiler_method = 'latexrun'
let maplocalleader = ","
" fzf
" sudo apt install fpz ripgrep
" show directory in right
nnoremap <silent> <C-d> :NERDTreeToggle<CR>
" fzf :Files
nnoremap <silent> <C-z> :Files<CR>
" fzf \ + f
nnoremap <silent> <Leader>f :Rg<CR>
" terminal
nnoremap <silent> <C-t> :FloatermNew --width=0.85 --height=0.95<CR>
" deja de resaltar la búsqueda
nnoremap <silent> <C-x> :nohlsearch<CR>
" guarda la sesión como Session.vim
nnoremap <silent> <C-a> :mksession!<CR>
" change beetwen tabs
nnoremap <silent> <leader>1 :tabn1<CR>
nnoremap <silent> <leader>2 :tabn2<CR>
nnoremap <silent> <leader>3 :tabn3<CR>
nnoremap <silent> <leader>4 :tabn4<CR>
nnoremap <silent> <leader>5 :tabn5<CR>
nnoremap <silent> <leader>6 :tabn6<CR>
