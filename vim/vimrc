" DO NOT EDIT THIS FILE
" Add your own customizations in ~/.vim_runtime/my_configs.vim
set number
syntax enable
filetype plugin indent on
set tabstop=4 " number os visual spaces per TAB
set softtabstop=4 " number of spaces in tab when editing
set expandtab " tabs are spaces
set wildmenu " visual autocomplete for command menu
set lazyredraw " redraw only when need to
set incsearch " search as characters are entered
set hlsearch " highlight matches
set autoindent
set cursorline
set showmatch
set termguicolors
set runtimepath+=~/.vim_runtime
set encoding=UTF-8
set updatetime=100
" indent plugin
let g:indentLine_color_term = 239
let g:indentLine_defaultGroup = 'SpecialKey'
"let g:indentLine_char = '¦'
let g:indentLine_char_list = ['|', '¦', '┆', '┊']
let g:indentLine_enabled = 1
" gitgutter
let g:gitgutter_sign_added = '+'
let g:gitgutter_sign_modified = '>'
let g:gitgutter_sign_removed = '-'
let g:gitgutter_sign_revomed_first_line = '^'
let g:gitgutter_sign_modified_removed = '<'
let g:gitgutter_async = 0
" LaTex
let g:vimtex_view_method = 'zathura'
let g:vimtex_view_general_viewer = 'okular'
let g:vimtex_view_general_options = '--unique file:@pdf\#src:@line@tex'
let g:vimtex_compiler_method = 'latexrun'
let maplocalleader = ","
" fzf
" sudo apt install fpz ripgrep
nnoremap <silent> <C-d> :NERDTreeToggle<CR>
nnoremap <silent> <C-f> :Files<CR>
nnoremap <silent> <Leader>f :Rg<CR>
" terminal
nnoremap <silent> <C-t> :FloatermNew<CR>
" deja de resaltar la búsqueda
nnoremap <silent> <C-s> :nohlsearch<CR>
" guarda la sesión como Session.vim
nnoremap <silent> <C-a> :mksession<CR>

call plug#begin()
Plug 'ryanoasis/vim-devicons'
Plug 'airblade/vim-gitgutter'
Plug 'tomasr/molokai'
Plug 'lervag/vimtex'
Plug 'airblade/vim-gitgutter'
Plug 'yggdroot/indentline'
Plug 'junegunn/fzf.vim'
Plug 'junegunn/fzf', { 'do': { -> fzf#install()  }  }
Plug 'voldikss/vim-floaterm'
Plug 'pR0Ps/molokai-dark'
Plug 'junegunn/goyo.vim'
Plug 'christoomey/vim-tmux-navigator'
call plug#end()

source ~/.vim_runtime/vimrcs/basic.vim
source ~/.vim_runtime/vimrcs/filetypes.vim
source ~/.vim_runtime/vimrcs/plugins_config.vim
source ~/.vim_runtime/vimrcs/extended.vim
try
  source ~/.vim_runtime/my_configs.vim
catch
endtry
colorscheme molokai-dark

" comentar todo el if en caso de error
if exists('+termguicolors')
    let &t_8f = "\<Esc>[38;2;%lu;%lu;%lum"
    let &t_8b = "\<Esc>[48;2;%lu;%lu;%lum"
    set termguicolors
endif
